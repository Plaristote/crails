cmake_minimum_required(VERSION 2.8)

project(<%= options[:name] %>)
<% cmd_line  = "-std=c++0x -Wall -Wno-deprecated-declarations -pedantic" %>
<% cmd_line += " -DASYNC_SERVER"  unless options[:server]    != :async %>
<% cmd_line += " -DSERVER_DEBUG"  unless options[:debug]     == false  %>
<% cmd_line += " -DUSE_SEGVCATCH" unless options[:segvcatch] != true   %>
<% cmd_line += " -DUSE_MONGODB_SESSION_STORE" unless options[:session_store] != 'mongodb' %>
set(CMAKE_CXX_FLAGS "<%= cmd_line %>")

include_directories(include /usr/local/include .)

file(GLOB crails_app
     app/controllers/*.cpp
     app/models/*.cpp
     app/routes.cpp
     app/main.cpp
     config/salt.cpp
     <%= "config/session_store_mongodb.cpp" if options[:session_store] == 'mongodb' %>)

add_executable(crails-app ${crails_app})
<% if options[:sql] == true %>
  set(crails_sql_dep     soci_core soci_mysql crails-sql)
<% end %>
<% if options[:mongodb] == true %>
  set(crails_mongodb_dep mongoclient crails-mongodb)
<% end %>
target_link_libraries(crails-app
                      crails-core
                      boost_thread boost_filesystem boost_program_options boost_system
                      pthread dl
                      Boots
                      cppnetlib-client-connections cppnetlib-server-parsers cppnetlib-uri
                      <% if options[:segvcatch] == true %> segvcatch <% end %>
                      <% if options[:sql]       == true %> ${crails_sql_dep} <% end %>
                      <% if options[:mongodb]   == true %> ${crails_mongodb_dep} <% end %>)
